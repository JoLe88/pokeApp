<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/imageView_CardLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/card_bug">


        <ImageView
            android:id="@+id/imageViewPokeball"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:alpha="0.1"
            android:src="@drawable/pokeball"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="8dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text_view_pokemonname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Name"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/type1backgroudShape"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/transparent_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/text_view_pokemonname">

            <TextView
                android:id="@+id/textViewType1_invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:text="Typ 1"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/type1backgroudShape"
                app:layout_constraintEnd_toEndOf="@+id/type1backgroudShape"
                app:layout_constraintStart_toStartOf="@+id/type1backgroudShape"
                app:layout_constraintTop_toTopOf="@+id/type1backgroudShape" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textViewType1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/type1backgroudShape"
            app:layout_constraintStart_toStartOf="@+id/type1backgroudShape"
            app:layout_constraintTop_toTopOf="@+id/type1backgroudShape" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/type2backgroudShape"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/transparent_shape"
            app:layout_constraintBottom_toTopOf="@+id/type1backgroudShape"
            app:layout_constraintStart_toStartOf="@+id/type1backgroudShape">

            <TextView
                android:id="@+id/textViewType2_invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="8dp"
                android:text="Typ 2"
                android:textColor="@android:color/white"
                android:textSize="12dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/type2backgroudShape"
                app:layout_constraintEnd_toEndOf="@+id/type2backgroudShape"
                app:layout_constraintStart_toStartOf="@+id/type2backgroudShape"
                app:layout_constraintTop_toTopOf="@+id/type2backgroudShape" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textViewType2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/type2backgroudShape"
            app:layout_constraintStart_toStartOf="@+id/type2backgroudShape"
            app:layout_constraintTop_toTopOf="@+id/type2backgroudShape" />


        <TextView
            android:id="@+id/text_view_idex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="123"
            android:textColor="#30000000"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>